
@model Lab4v2.Models.ViewModels.NewsBoardViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
               Fee
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NewsBoards) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id">Select</a> 
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="News" asp-action="Index" asp-route-id="@item.Id">News</a> | <!-- A2 -->
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.Clients != null)
{
    <table class="table">
        <tr>
            @if (Model.Clients.Count() > 0)
            {
                <th> Fulll Name </th>
            }
            else
            {
                <th> No clients record exist </th>
            }
        </tr>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
            </tr>
        }
    </table>
}

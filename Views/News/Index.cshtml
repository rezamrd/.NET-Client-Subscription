@model IEnumerable<Lab4v2.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>




<p>
      <a asp-action="Create" asp-route-newsBoardId="@ViewBag.NewsBoardId">Upload New</a>
</p>
<p>
    <a asp-action="Index" asp-controller="NewsBoards">Back to list</a>
</p>


@if(Model.Count() == 0)
{

    <strong>Nothing to Show</strong>
  
}else {

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
               @Html.DisplayNameFor(x=>x.Url);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBoardID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>



@foreach (var item in Model) {

            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                <img src="@item.Url" alt="@item.FileName" width="500" height="300"/> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsBoard.Id)
            </td>
            <td>
             
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

}